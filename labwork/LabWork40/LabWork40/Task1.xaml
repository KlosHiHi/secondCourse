<Window x:Class="LabWork40.Task1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:LabWork40"
        Title="Задание 1,2" Height="450" Width="450" MinHeight="450" MinWidth="450" MaxHeight="450" MaxWidth="450">
    <Window.Resources>
        <Style TargetType="Ellipse">
            <Setter Property="Margin" Value="5"/>
        </Style>
        <Style TargetType="Rectangle">
            <Setter Property="Margin" Value="5"/>
        </Style>
    </Window.Resources>
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <StackPanel Orientation="Horizontal">

            <Ellipse Fill="Red" Width="100" Height="100"/>

            <Ellipse Width="100" Height="100">
                <Ellipse.Fill>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="DeepPink" Offset="0.2"/>
                        <GradientStop Color="Purple" Offset="0.8"/>
                    </LinearGradientBrush>
                </Ellipse.Fill>
            </Ellipse>

            <Ellipse Width="100" Height="100">
                <Ellipse.Fill>
                    <RadialGradientBrush GradientOrigin="0.5,0.5" Center="0.5,0.5" RadiusX="0.5" RadiusY="0.5">
                        <RadialGradientBrush.GradientStops>
                            <GradientStop Color="Black" Offset="0" />
                            <GradientStop Color="Red" Offset="0.5" />
                            <GradientStop Color="Black" Offset="0.8" />
                            <GradientStop Color="Brown" Offset="0.9" />
                        </RadialGradientBrush.GradientStops>
                    </RadialGradientBrush>
                </Ellipse.Fill>
            </Ellipse>

            <Ellipse Width="100" Height="100">
                <Ellipse.Fill>
                    <ImageBrush ImageSource="/Images/dante.jpg"></ImageBrush>
                </Ellipse.Fill>
            </Ellipse>
        </StackPanel>

        <StackPanel Orientation="Horizontal">
            <Rectangle Fill="DodgerBlue"  Height="100" Width="100" RadiusX="15" RadiusY="15"/>

            <Rectangle Width="100" Height="100" Stroke="CadetBlue" StrokeThickness="5">
                <Rectangle.Fill>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="DimGray" Offset="0"/>
                        <GradientStop Color="DarkSalmon" Offset="0.5"/>
                        <GradientStop Color="Goldenrod"  Offset="0.9"/>
                    </LinearGradientBrush>
                </Rectangle.Fill>
            </Rectangle>

            <Rectangle Width="100" Height="100" Stroke="GreenYellow" StrokeDashArray="1 1" StrokeThickness="5">
                <Rectangle.Fill>
                    <RadialGradientBrush GradientOrigin="0.5,0.5" Center="0.5,0.5" RadiusX="0.5" RadiusY="0.5">
                        <RadialGradientBrush.GradientStops>
                            <GradientStop Color="Wheat" Offset="0" />
                            <GradientStop Color="Beige" Offset="0.5" />
                            <GradientStop Color="AliceBlue" Offset="0.6" />
                            <GradientStop Color="BlueViolet" Offset="0.95" />
                        </RadialGradientBrush.GradientStops>
                    </RadialGradientBrush>
                </Rectangle.Fill>
            </Rectangle>

            <Rectangle Width="100" Height="100">
                <Rectangle.Fill>
                    <ImageBrush ImageSource="/Images/vergil.jpg"></ImageBrush>
                </Rectangle.Fill>
            </Rectangle>
        </StackPanel>

        <WrapPanel>
            <Button Width="50" Height="50" Background="LightBlue" Foreground="Chocolate" Content="meow" Margin="10">
                <Button.RenderTransform>
                    <ScaleTransform ScaleX="1.5" ScaleY="1.5"/>
                </Button.RenderTransform>
            </Button>

            <Button Width="75" Height="50" Background="Chocolate" Foreground="LightBlue" Margin="50" Content="meow">
                <Button.RenderTransform>
                    <SkewTransform CenterX="0" CenterY="0" AngleX="0" AngleY="30"/>
                </Button.RenderTransform>
            </Button>

            <Button Width="50" Height="50" Background="LawnGreen" Foreground="DarkCyan" Content="meow" Margin="10">
                <Button.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform ScaleX="2" ScaleY="2"/>
                        <SkewTransform AngleX="30" AngleY="0" CenterX="0" CenterY="0"/>
                    </TransformGroup>
                </Button.RenderTransform>
            </Button>
        </WrapPanel>
    </StackPanel>
</Window>
