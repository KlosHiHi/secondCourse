<Window x:Class="LabWork40.Task3"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LabWork40"
        mc:Ignorable="d"
        Title="Задание 3" Height="450" Width="450" MinHeight="450" MinWidth="450" MaxHeight="450" MaxWidth="450">
    <Window.Resources>
        <Style TargetType="Ellipse">
            <Setter Property="Fill">
                <Setter.Value>
                    <LinearGradientBrush>
                        <GradientStop Color="Blue" Offset="0"/>
                        <GradientStop Color="LightSteelBlue" Offset="0.5"/>
                        <GradientStop Color="Blue" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Height" Value="50"/>
            <Setter Property="Width" Value="50"/>
        </Style>

        <Style TargetType="Polygon">
            <Setter Property="Fill" Value="BurlyWood"/>
            <Setter Property="Stroke" Value="Bisque"/>
        </Style>
    </Window.Resources>
    <Canvas Background="Gainsboro">
        <Polygon Points="50,150,150,50,250,150" Canvas.Left="77" Canvas.Top="26" />
        <Polygon Points="100,200,200,100,300,200" Canvas.Left="27" Canvas.Top="71"/>
        <Polygon Points="50,150,150,50,250,150" Canvas.Top="215" Canvas.Left="77"/>
        
        <Rectangle Fill="Brown" Height="50" Width="50" Canvas.Left="202" Canvas.Top="365" HorizontalAlignment="Left" VerticalAlignment="Center"/>

        <Ellipse Canvas.Left="267" Canvas.Top="349" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <Ellipse Canvas.Left="137" Canvas.Top="251"/>
        <Ellipse Canvas.Left="267" Canvas.Top="151"/>

        <Path Name="starPath" StrokeThickness="1" Stroke="Black"  
        Data="M 127,37 L 104,105 L 34,105 L 91,150 L 69,218 L 127,176 L 187,218 L 164,150 L 223,105 L 151,105 L 127,37" 
        Canvas.Left="180" Canvas.Top="10" Height="90" Width="90" Stretch="Fill">
            <Path.Fill>
                <RadialGradientBrush GradientOrigin="0.5,0.5" Center="0.5,0.5" RadiusX="0.5" RadiusY="0.5">
                    <RadialGradientBrush.GradientStops>
                        <GradientStop Color="Black" Offset="0" />
                        <GradientStop Color="Red" Offset="0.5" />
                        <GradientStop Color="Black" Offset="0.8" />
                        <GradientStop Color="Brown" Offset="0.9" />
                    </RadialGradientBrush.GradientStops>
                </RadialGradientBrush>
            </Path.Fill>
        </Path>
    </Canvas>
</Window>
