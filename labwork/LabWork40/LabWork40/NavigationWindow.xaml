<Window x:Class="LabWork40.NavigationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:LabWork40"
        Title="Навигация" Height="450" Width="450" MinHeight="450" MinWidth="450" MaxHeight="450" MaxWidth="450"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Background" Value="Olive"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Width" Value="200"/>
        </Style>
    </Window.Resources>
    <WrapPanel VerticalAlignment="Center" HorizontalAlignment="Center" Orientation="Vertical">
        <Button x:Name="ToTask1Button" Content="Задание 1, 2" Click="ToTask1Button_Click"/>
        <Button x:Name="ToTask3Button" Content="Задание 3" Click="ToTask3Button_Click"/>
        <Button x:Name="ToTask4Button" Content="Задание 4, 5" Click="ToTask4Button_Click"/>
    </WrapPanel>
</Window>
