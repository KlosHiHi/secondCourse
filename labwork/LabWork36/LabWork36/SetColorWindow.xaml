<Window x:Class="LabWork36.SetColorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LabWork36"
        mc:Ignorable="d"
        Title="SetColorWindow" Height="300" Width="600" MinHeight="300" MinWidth="600">
    <VirtualizingStackPanel  Background="White">
        <DockPanel Margin="3">
            <Border BorderThickness="3" BorderBrush="Black" CornerRadius="50" Background="Red">
                <TextBlock Width="20" Text="R" Foreground="White" TextAlignment="Center" VerticalAlignment="Center"/>
            </Border>
            <Slider x:Name="RedSlider" Margin="10 5 10 5" Maximum="255" ValueChanged="RedSlider_ValueChanged"/>
        </DockPanel>
        <DockPanel Margin="3">
            <Border BorderThickness="3" BorderBrush="Black" CornerRadius="50" Background="Green">
                <TextBlock Width="20" Text="G" Foreground="White" TextAlignment="Center" VerticalAlignment="Center"/>
            </Border>
            <Slider x:Name="GreenSlider" Margin="10 5 10 5" Maximum="255" ValueChanged="GreenSlider_ValueChanged"/>
        </DockPanel>
        <DockPanel Margin="3">
            <Border BorderThickness="3" BorderBrush="Black" CornerRadius="50" Background="Blue">
                <TextBlock Width="20" Text="B" Foreground="White" TextAlignment="Center" VerticalAlignment="Center"/>
            </Border>
            <Slider x:Name="BlueSlider" Margin="10 5 10 5" Maximum="255" ValueChanged="BlueSlider_ValueChanged"/>
        </DockPanel>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Border x:Name="ShowColor" Grid.Column="1" BorderBrush="DarkOliveGreen" BorderThickness="2" CornerRadius="20" Background="Black" Height="125" Width="125" Margin="10"/>

            <Canvas Margin="10">
                <Button x:Name="CancelButton" Content="ОТМЕНА" IsCancel="true" Width="280" Margin="0 0 0 10" Canvas.Bottom="10" Click="CancelButton_Click" Background="White" BorderThickness="2" BorderBrush="Black"/>
                <Button x:Name="OkButton" Content="ОК" IsDefault = "true" Width="280" Click="OkButton_Click" Margin="0 0 0 10" Canvas.Bottom="40" Background="White" BorderThickness="2" BorderBrush="Black"/>
            </Canvas>

        </Grid>
    </VirtualizingStackPanel>
</Window>
