<Window x:Class="LabWork36.ClosingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LabWork36"
        mc:Ignorable="d"
        Title="Подтвержение" Height="250" Width="500" MaxHeight="250" MaxWidth="500" MinHeight="250" MinWidth="500">
    <DockPanel>
        <Image Height="180" Width="180" Source="/Image/question.png" />
        <Canvas DockPanel.Dock="Bottom" Height="100">
            <Button x:Name="YesButton" Content="Да" Height="40" Width="70" Margin="5" Background="PaleGreen" Canvas.Bottom="10" Canvas.Right="100" FontSize="20" IsDefault="True" Click="YesButton_Click"/>
            <Button x:Name="NoButton" Content="Нет" Height="40" Width="70" Margin="5" Background="PaleVioletRed"  Canvas.Bottom="10" Canvas.Right="10" FontSize="20" IsCancel="True"/>
        </Canvas>
        <TextBlock Text="Вы хотите закрыть приложение?" FontSize="20"/>
    </DockPanel>
</Window>
