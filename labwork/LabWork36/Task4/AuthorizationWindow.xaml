<Window x:Class="Task4.AuthorizationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task4"
        mc:Ignorable="d"
        Title="Авторизация" Height="450" Width="500" FontSize="20" MinHeight="450" MinWidth="500" WindowStartupLocation="CenterScreen">
    <Grid Background="PaleTurquoise">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="7*"/>
        </Grid.ColumnDefinitions>
        <Label x:Name="LoginLabel" Content="Логин" VerticalAlignment="Center" Margin="10"/>
        <TextBox x:Name="LoginTextBox" Grid.Column="1" Margin="10" Height="40" MaxLength="30"/>
        <Label x:Name="PasswordLabel" Content="Пароль" Grid.Row="1" VerticalAlignment="Center" Margin="10"/>
        <PasswordBox x:Name="PasswordBox" Grid.Column="1" Grid.Row="1" Margin="10" Height="40" MaxLength="16"/>
        <DockPanel Grid.Row="2"  Grid.ColumnSpan="2">
            <Button x:Name="LoginButton" Content="Войти" Height="40" Width="200" DockPanel.Dock="Top" Margin="0 30 0 0" Background="Aqua" BorderBrush="Azure" BorderThickness="3" Click="LoginButton_Click"/>
            <Button x:Name="ExitButton" Content="Отмена" Height="40" Width="200" Background="LightGray" BorderBrush="Azure" BorderThickness="3" Click="ExitButton_Click"/>
        </DockPanel>

    </Grid>
</Window>
