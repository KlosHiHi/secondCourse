<Page x:Class="LabWork27.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LabWork27.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button x:Name="AuthorizationButton" Content="Авторизация" HorizontalAlignment="Center" Grid.Row = "0" Height="30" Width="100" Click="AuthorizationButton_Click"/>
        <Button x:Name="RegistrationButton"  Content="Регистрация" HorizontalAlignment="Center" Grid.Row = "1" Height="30" Width="100" Click="RegistrationButton_Click"/>
        <Button x:Name="SettingsButton" Content="Настройки" HorizontalAlignment="Center" Grid.Row = "2" Height="30" Width="100" Click="SettingsButton_Click"/>
    </Grid>
</Page>
