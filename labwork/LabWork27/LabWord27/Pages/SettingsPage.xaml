<Page x:Class="LabWork27.Pages.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LabWork27.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Настройки">
    <Grid>
        <TabControl>
            <TabItem Header="GroupBox">
                <StackPanel>
                    <GroupBox Header="О программе">
                        <Label Content="Данная программа создана с целью отточить навыки проектирования приложений!"/>
                    </GroupBox>
                    <GroupBox Header="Цветовая тёма">
                        <GroupBox.Content>
                            <WrapPanel>
                                <RadioButton GroupName="ColorTheme" Content="Тёмная"/>
                                <RadioButton GroupName="ColorTheme" Content="Светлая"/>
                            </WrapPanel>
                        </GroupBox.Content>
                    </GroupBox>
                    <GroupBox Header="Размер текста">
                        <WrapPanel>
                            <RadioButton GroupName="FontSize" Content="Мелкий"/>
                            <RadioButton GroupName="FontSize" Content="Средний"/>
                            <RadioButton GroupName="FontSize" Content="Большой"/>
                        </WrapPanel>
                    </GroupBox>
                </StackPanel>
            </TabItem>
            <TabItem Header="Expander">
                <StackPanel>
                    <Expander Header="О программе">
                        <Label Content="Данная программа создана с целью отточить навыки проектирования приложений!"/>
                    </Expander>
                    <Expander Header="Цветовая тёма">
                        <WrapPanel>
                            <RadioButton GroupName="ColorTheme" Content="Тёмная"/>
                            <RadioButton GroupName="ColorTheme" Content="Светлая"/>
                        </WrapPanel>
                    </Expander>
                    <Expander Header="Размер текста">
                        <WrapPanel>
                            <RadioButton GroupName="FontSize" Content="Мелкий"/>
                            <RadioButton GroupName="FontSize" Content="Средний"/>
                            <RadioButton GroupName="FontSize" Content="Большой"/>
                        </WrapPanel>
                    </Expander>
                </StackPanel>
            </TabItem>
            <TabItem Header="StackPanel">
                <StackPanel x:Name="GameStackPanel">
                    
                </StackPanel>
            </TabItem>
        </TabControl>
    </Grid>
</Page>
