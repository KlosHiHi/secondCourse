<Page x:Class="LabWork27.Pages.AuthorizationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LabWork27.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Авторизация">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label Content="Логин" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Label Content="Пароль" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <TextBox x:Name="LoginTextBox" Grid.Column="1" Height="30" Width="300" />
        <TextBox x:Name="PasswordTextBox" Grid.Row="1" Grid.Column="1" Height="30" Width="300"/>
        <Button x:Name="LogInButton" Content="Войти" Grid.Row="2" Height="30" Width="120" Click="LogInButton_Click"/>
        <Button x:Name="SignInButton" Content="Зарегистрироваться" Grid.Row="2" Grid.Column="1" Height="30" Width="120" Click="SignInButton_Click"/>
    </Grid>
</Page>
