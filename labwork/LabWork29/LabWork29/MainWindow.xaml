<Window x:Class="LabWork29.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LabWork29"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <Style TargetType="Label">
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="DeepPink"/>
                    <Setter Property="FontSize" Value="20"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="Button">
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Button">
                                <Border Background="HotPink" BorderBrush="DeepPink" BorderThickness="1">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="StackPanel">
            <Style.Triggers>
                <EventTrigger RoutedEvent="MouseDown">
                    <EventTrigger.Actions>
                        <BeginStoryboard>
                            <Storyboard>
                                
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger.Actions>

                </EventTrigger>
                <MultiDataTrigger>
                    <MultiDataTrigger.Conditions>
                        <Condition Binding="{Binding ElementName=TouchLabel, Path=IsMouseOver}" Value="True"/>
                    </MultiDataTrigger.Conditions>
                    <MultiDataTrigger.Setters>
                        <Setter Property="Background" Value="LightPink"/>
                    </MultiDataTrigger.Setters>
                </MultiDataTrigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <StackPanel>

        <Label Content="Главная"/>
        <Label Content="Галерея"/>
        <Label Content="Настройки"/>
        <Label Content="Выход"/>

        <Border BorderBrush="Wheat" BorderThickness="3" CornerRadius="10">
            <WrapPanel HorizontalAlignment="Center">
                <Button Content="Назад" Margin="5"/>
                <Button Content="Обновить" Margin="5"/>
                <Button Content="Вперёд" Margin="5"/>
            </WrapPanel>
        </Border>


        <Grid Margin="10 20 10 10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.1*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="25"/>
                <RowDefinition Height="25"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Логин" Margin="0,0,10,0" VerticalAlignment="Center"/>
            <TextBox x:Name="LoginTextBox" Width="200" Grid.Column="1"/>
            <Label Foreground="Red" Content="Поле обязательно для заполнения"
                   Grid.Column="2">
                <Label.Style>
                    <Style TargetType="Label">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding ElementName=LoginTextBox, Path=Text.IsEmpty}" Value="False">
                                <Setter Property="Visibility" Value="Collapsed"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Label.Style>
            </Label>
            <TextBlock Text="Пароль" Margin="0,0,10,0" Grid.Row="1" VerticalAlignment="Center"/>
            <TextBox x:Name="PasswordTextBox" Width="200" Grid.Column="1" Grid.Row="1"/>
            <Label Foreground="Red" Content="Поле обязательно для заполнения"
                   Grid.Column="2" Grid.Row="1">
                <Label.Style>
                    <Style TargetType="Label">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding ElementName=PasswordTextBox, Path=Text.IsEmpty}" Value="False">
                                <Setter Property="Visibility" Value="Collapsed"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Label.Style>
            </Label>
        </Grid>

        <CheckBox x:Name="PolicyCheckBox" Content="Согласен с условиями использования" Margin="5"/>
        <CheckBox x:Name="ReadedCheckBox" Content="Прочёл соглашение" Margin="5"/>
        <Button x:Name="RegistrationButton" Content="Зарегистрироваться" HorizontalAlignment="Center">
            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="IsEnabled" Value="False"/>
                    <Style.Triggers>
                        <MultiDataTrigger>
                            <MultiDataTrigger.Conditions>
                                <Condition Binding="{Binding ElementName=PolicyCheckBox, Path=IsChecked}" Value="True"/>
                                <Condition Binding="{Binding ElementName=ReadedCheckBox, Path=IsChecked}" Value="True"/>
                            </MultiDataTrigger.Conditions>
                            <MultiDataTrigger.Setters>
                                <Setter Property="IsEnabled" Value="True"/>
                            </MultiDataTrigger.Setters>
                        </MultiDataTrigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
        </Button>

        <Label x:Name="TouchLabel" Content="не трогать" HorizontalAlignment="Right"/>
    </StackPanel>
</Window>
