<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LabWork39.Task1Page"
             Title="Задание 1">

    <StackLayout>
        <ListView x:Name="FilesListView">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <ViewCell.View>
                            <Grid Padding="5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <Label Text="{Binding Key}" Grid.Column="0"/>
                                <Label Text="{Binding TotalSize}" Grid.Column="1"/>
                                <Label Text="{Binding Min}" Grid.Column="2"/>
                                <Label Text="{Binding Max}" Grid.Column="3"/>
                                <Label Text="{Binding FileQuantity}" Grid.Column="4"/>
                            </Grid>
                        </ViewCell.View>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        
    </StackLayout>

</ContentPage>
