<Window x:Class="LabWork41.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LabWork41"
        mc:Ignorable="d"
        Title="Навигация" Height="450" Width="450"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <Style TargetType="DockPanel">
            <Setter Property="Background" Value="HotPink"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Height" Value="50"/>
            <Setter Property="Width" Value="300"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="HotPink"/>
        </Style>
    </Window.Resources>
    <DockPanel>
        <WrapPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button x:Name="Task1Button" Content="Задание 1" Click="Task1Button_Click"/>
            <Button x:Name="Task2Button" Content="Задание 2" Click="Task2Button_Click"/>
            <Button x:Name="Task3Button" Content="Задание 3" Click="Task3Button_Click"/>
            <Button x:Name="Task4Button" Content="Задание 4" Click="Task4Button_Click"/>
            <Button x:Name="Task5Button" Content="Задание 5" Click="Task5Button_Click"/>
        </WrapPanel>
    </DockPanel>
</Window>
