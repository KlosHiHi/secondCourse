<Window x:Class="LabWork41.Tasks.Task4"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LabWork41.Tasks"
        mc:Ignorable="d"
        Title="Задание 4 - изменение фона" Height="450" Width="450" MinHeight="450" MinWidth="450">
    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="FontSize" Value="50"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        <Style TargetType="TextBlock" x:Key="PrizeTextStyle">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Width" Value="200"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="HotPink"/>
            <Setter Property="TextAlignment" Value="Center"/>

            <Style.Triggers>
                <EventTrigger RoutedEvent="Button.MouseEnter">
                    <EventTrigger.Actions>
                        <BeginStoryboard>
                            <Storyboard>
                                <ColorAnimation Storyboard.TargetProperty="Background.Color" To="GreenYellow" Duration="0:0:0.5"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger.Actions>
                </EventTrigger>

                <EventTrigger RoutedEvent="Button.MouseLeave">
                    <EventTrigger.Actions>
                        <BeginStoryboard>
                            <Storyboard>
                                <ColorAnimation Storyboard.TargetProperty="Background.Color" To="White" Duration="0:0:0.5"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger.Actions>
                </EventTrigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Grid Background="HotPink">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="ЗАБИРАЙ ПРИЗЫ" TextAlignment="Center"/>
            
            <TextBlock x:Name="IphoneButton" Text="IPHONE 16 pro max" Style="{StaticResource PrizeTextStyle}" MouseDown="Button_MouseDown"/>
            <TextBlock x:Name="RtxButton" Text="GeForce RTX 5090" Style="{StaticResource PrizeTextStyle}" MouseDown="Button_MouseDown"/>
            <TextBlock x:Name="MoneyButton" Text="200.000 руб" Style="{StaticResource PrizeTextStyle}" MouseDown="Button_MouseDown"/>
        </StackPanel>
    </Grid>
</Window>
