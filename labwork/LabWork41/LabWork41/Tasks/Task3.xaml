<Window x:Class="LabWork41.Tasks.Task3"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LabWork41.Tasks"
        mc:Ignorable="d"
        Title="Задание 3 - Мигающая кнопка" Height="450" Width="700" MinHeight="450" MinWidth="700">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="FontSize" Value="30"/>
            <Setter Property="Height" Value="80"/>
            <Setter Property="Width" Value="200"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="HotPink"/>
            <Setter Property="BorderBrush" Value="DarkGray"/>
            <Setter Property="BorderThickness" Value="3"/>
        </Style>
    </Window.Resources>
    <Window.Triggers>
        <EventTrigger RoutedEvent="Window.Loaded">
            <EventTrigger.Actions>
                <BeginStoryboard>
                    <Storyboard>
                        <DoubleAnimation Storyboard.TargetProperty="FontSize" Storyboard.TargetName="TargetButton" 
                            From="30" To="60" AutoReverse="True" RepeatBehavior="0:0:4" Duration="0:0:1"/>
                        <DoubleAnimation Storyboard.TargetProperty="Width" Storyboard.TargetName="TargetButton" 
                            From="200" To="400" AutoReverse="True" RepeatBehavior="0:0:4" Duration="0:0:1"/>
                        <DoubleAnimation Storyboard.TargetProperty="Height" Storyboard.TargetName="TargetButton" 
                            From="80" To="160" AutoReverse="True" RepeatBehavior="0:0:4" Duration="0:0:1"/>
                    </Storyboard>
                </BeginStoryboard>
            </EventTrigger.Actions>
        </EventTrigger>
    </Window.Triggers>
    <Grid Background="HotPink">
        <Button x:Name="TargetButton" Content="ПОДАРКИ">
        </Button>
    </Grid>
</Window>
