<Window x:Class="LabWork41.Tasks.Task1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LabWork41.Tasks"
        mc:Ignorable="d"
        Title="Задание 1 - Гамбургер" Height="550" Width="500" MinHeight="550" MinWidth="500">
    <Window.Resources>
        <Style TargetType="DockPanel">
            
        </Style>
        
        <Style x:Key="BaseButtonStyle" TargetType="Button" >
            <Setter Property="Height" Value="30"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="HotPink"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>
        
        <Style x:Key="HamburgerButtonStyle" BasedOn="{StaticResource BaseButtonStyle}" TargetType="Button">
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="DarkGray"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="Width" Value="35"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Margin" Value="0"/>
            <Setter Property="VerticalContentAlignment" Value="Top"/>
        </Style>
        <Style TargetType="Line">
            <Setter Property="Stroke" Value="DarkGray"/>
            <Setter Property="StrokeThickness" Value="3"/>
            <Setter Property="X2" Value="150"/>
        </Style>
        <Style TargetType="Image">
            <Setter Property="Margin" Value="3"/>
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Foreground" Value="DarkGray"/>
        </Style>
    </Window.Resources>

    <DockPanel Background="White">
        <Button x:Name="HamburgerButton" Content="🍔" DockPanel.Dock="Top" VerticalAlignment="Top" Style="{StaticResource ResourceKey=HamburgerButtonStyle}" HorizontalAlignment="Left" Width="35" Click="HamburgerButton_Click"/>

        <StackPanel x:Name="MenuStackPanel" HorizontalAlignment="Left" Width="0"  Background="White">

            <DockPanel>
                <Image Source="/Images/cat.jpg" Height="53">
                    <Image.Clip>
                        <EllipseGeometry RadiusX="25" RadiusY="25" Center="25, 25"/>
                    </Image.Clip>
                </Image>
                <TextBlock Text="Котик" VerticalAlignment="Center"/>
            </DockPanel>

            <Line/>

            <Button Content="Домашняя" Style="{StaticResource ResourceKey=BaseButtonStyle}"/>

            <Line/>

            <Button Content="Магазины" Style="{StaticResource ResourceKey=BaseButtonStyle}"/>
            <Button Content="Доставка" Style="{StaticResource ResourceKey=BaseButtonStyle}"/>
            <Line/>

            <Button Content="Товары" Style="{StaticResource ResourceKey=BaseButtonStyle}"/>
            <Button Content="Акции" Style="{StaticResource ResourceKey=BaseButtonStyle}"/>
            <Button Content="Покупателям" Style="{StaticResource ResourceKey=BaseButtonStyle}"/>

            <Line/>

            <Button Content="Настройки" Style="{StaticResource ResourceKey=BaseButtonStyle}"/>
            <Button Content="Политика" Style="{StaticResource ResourceKey=BaseButtonStyle}"/>
        </StackPanel>
        
        <WrapPanel  Background="HotPink"/>
        
    </DockPanel>
</Window>
