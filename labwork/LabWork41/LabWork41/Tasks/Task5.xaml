<Window x:Class="LabWork41.Tasks.Task5"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LabWork41.Tasks"
        mc:Ignorable="d"
        Title="Задание 5 - Жемчужина" Height="600" Width="500" MinHeight="600" MaxHeight="600" MinWidth="500" MaxWidth="500">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="FontSize" Value="50"/>
            <Setter Property="Height" Value="100"/>
            <Setter Property="Width" Value="500"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="HotPink"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>
    </Window.Resources>
    <DockPanel>
        <Button Content="МЕНЯЙ" DockPanel.Dock="Top">
            <Button.Triggers>
                <EventTrigger RoutedEvent="Button.Click">
                    <BeginStoryboard>
                        <Storyboard>
                            <ColorAnimationUsingKeyFrames
                                Storyboard.TargetProperty="Fill.GradientStops[1].Color" Storyboard.TargetName="Round" Duration="0:0:6">
                                <ColorAnimationUsingKeyFrames.KeyFrames>
                                    <LinearColorKeyFrame KeyTime="0:0:1" Value="OrangeRed" />
                                    <LinearColorKeyFrame KeyTime="0:0:2" Value="DarkSeaGreen" />
                                    <LinearColorKeyFrame KeyTime="0:0:3" Value="PaleGoldenrod" />
                                    <LinearColorKeyFrame KeyTime="0:0:4" Value="PaleVioletRed" />
                                    <LinearColorKeyFrame KeyTime="0:0:5" Value="PowderBlue" />
                                    <LinearColorKeyFrame KeyTime="0:0:6" Value="DeepPink" />
                                </ColorAnimationUsingKeyFrames.KeyFrames>
                            </ColorAnimationUsingKeyFrames>
                            <ColorAnimationUsingKeyFrames
                                Storyboard.TargetProperty="Fill.GradientStops[0].Color" Storyboard.TargetName="Round" Duration="0:0:6">
                                <ColorAnimationUsingKeyFrames.KeyFrames>
                                    <LinearColorKeyFrame KeyTime="0:0:2" Value="DarkOliveGreen" />
                                    <LinearColorKeyFrame KeyTime="0:0:4" Value="Red" />
                                    <LinearColorKeyFrame KeyTime="0:0:6" Value="White" />
                                </ColorAnimationUsingKeyFrames.KeyFrames>
                            </ColorAnimationUsingKeyFrames>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Button.Triggers>
        </Button>
        
        <Line Stroke="DarkGray" StrokeThickness="5" X2="500" DockPanel.Dock="Top"/>
        
        <Ellipse x:Name="Round" Stroke="DeepPink" StrokeThickness="5" Margin="5">
            <Ellipse.Fill>
                <RadialGradientBrush>
                    <GradientStop Color="LightPink" Offset="0.5"/>
                    <GradientStop Color="DeepPink" Offset="1"/>
                </RadialGradientBrush>
            </Ellipse.Fill>
        </Ellipse>
    </DockPanel>
</Window>
