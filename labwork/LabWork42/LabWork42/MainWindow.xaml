<Window x:Class="Paint.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Paint"
        Title="Рисовалка" Height="800" Width="1000" MinHeight="400" MinWidth="700"
         WindowStartupLocation="CenterScreen">
    <DockPanel>
        <WrapPanel DockPanel.Dock="Top" Background="CadetBlue">
            <Button x:Name="SetImageButton" Content="🖼️" Height="30" Width="50" BorderThickness="1" BorderBrush="DarkGray" Margin="5" 
                    Background="White" FontSize="20" VerticalContentAlignment="Center" Click="SetImageButton_Click"/>
            
            <Line Stroke="White" StrokeThickness="2" Y2="40" Margin="0 0 5 0"/>

            <Slider x:Name="PenSizeSlider" Height="20" Width="200" Minimum="1" Maximum="250" ValueChanged="PenSizeSlider_ValueChanged" Background="CadetBlue" Margin="3"/>

            <TextBlock x:Name="PenSizeTextBlock" Text="1 px" VerticalAlignment="Center" Foreground="White" Width="50" TextAlignment="Center"/>

            <Line Stroke="White" StrokeThickness="2" Y2="40" Margin="5 0 5 0"/>
            
            <Button x:Name="SetColorButton" Height="30" Width="50" BorderThickness="1" BorderBrush="DarkGray" Margin="5" Click="SetColorButton_Click">
                <Button.Content>
                    <Rectangle x:Name="BtnContentRectangle" Fill="Black" Height="30" Width="50"/>
                </Button.Content>
            </Button>
            <WrapPanel Orientation="Vertical">
                <Button Height="12" Width="12" BorderThickness="1" BorderBrush="DarkGray" Margin="5 5 0 2" Click="Button_Click">
                    <Button.Content>
                        <Rectangle Fill="Red" Height="30" Width="50"/>
                    </Button.Content>
                </Button>
                <Button Height="12" Width="12" BorderThickness="1" BorderBrush="DarkGray" Margin="5 4 0 0" Click="Button_Click">
                    <Button.Content>
                        <Rectangle Fill="Orange" Height="30" Width="50"/>
                    </Button.Content>
                </Button>
            </WrapPanel>
            <WrapPanel Orientation="Vertical">
                <Button Height="12" Width="12" BorderThickness="1" BorderBrush="DarkGray" Margin="5 5 0 2" Click="Button_Click">
                    <Button.Content>
                        <Rectangle Fill="Green" Height="30" Width="50"/>
                    </Button.Content>
                </Button>
                <Button Height="12" Width="12" BorderThickness="1" BorderBrush="DarkGray" Margin="5 4 0 0" Click="Button_Click">
                    <Button.Content>
                        <Rectangle Fill="Yellow" Height="30" Width="50"/>
                    </Button.Content>
                </Button>
            </WrapPanel>
            <WrapPanel Orientation="Vertical">
                <Button Height="12" Width="12" BorderThickness="1" BorderBrush="DarkGray" Margin="5 5 0 2" Click="Button_Click">
                    <Button.Content>
                        <Rectangle Fill="Blue" Height="30" Width="50"/>
                    </Button.Content>
                </Button>
                <Button Height="12" Width="12" BorderThickness="1" BorderBrush="DarkGray" Margin="5 4 0 0" Click="Button_Click">
                    <Button.Content>
                        <Rectangle Fill="Purple" Height="30" Width="50"/>
                    </Button.Content>
                </Button>
            </WrapPanel>
            <WrapPanel Orientation="Vertical">
                <Button Height="12" Width="12" BorderThickness="1" BorderBrush="DarkGray" Margin="5 5 0 2" Click="Button_Click">
                    <Button.Content>
                        <Rectangle Fill="Black" Height="12" Width="12"/>
                    </Button.Content>
                </Button>
            </WrapPanel>
            <Line Stroke="White" StrokeThickness="2" Y2="40" Margin="5 0 5 0"/>

        </WrapPanel>
        <InkCanvas x:Name="MainInkCanvas">
            <Image x:Name="InkCanvasImage" Stretch="Uniform"/>
            <InkCanvas.DefaultDrawingAttributes>
                <DrawingAttributes />
            </InkCanvas.DefaultDrawingAttributes>
        </InkCanvas>
    </DockPanel>
</Window>
