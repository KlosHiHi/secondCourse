<Window x:Class="LabWork30.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LabWork30"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Label Content="логин"/>
        <Label Content="email" Grid.Row="1"/>
        <CheckBox x:Name="AllowCheckBox" Grid.Row="2" Content="Я согласен на получение рассылки" Checked="AllowCheckBox_Checked" Unchecked="AllowCheckBox_Checked"/>

        <TextBox Grid.Column="1"/>
        <TextBox Grid.Row="1" Grid.Column="1"/>
        <Button x:Name="SubscriptionButton" Content="Подписаться" Grid.Row="2" Grid.Column="1" VerticalAlignment="Top" IsEnabled="False"/>
    </Grid>
</Window>
