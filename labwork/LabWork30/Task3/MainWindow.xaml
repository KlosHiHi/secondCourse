<Window x:Class="Task3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task3"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <TextBox x:Name="MainTextBox" Height="100" TextWrapping="Wrap" FontSize="10" TextAlignment="Left"/>
        <StackPanel RadioButton.Checked="RadioButton_Checked" Orientation="Horizontal">
            <RadioButton Content="10" IsChecked="True"/>
            <RadioButton Content="20"/>
            <RadioButton Content="30"/>
        </StackPanel>
        <StackPanel>
            <RadioButton x:Name="LeftAligmentRadioButton" Content="По левому краю" Checked="LeftAligmentRadioButton_Checked" IsChecked="True"/>
            <RadioButton x:Name="CenterAligmentRadioButton" Content="По центру" Checked="CenterAligmentRadioButton_Checked"/>
            <RadioButton x:Name="RightAligmentRadioButton" Content="По правому краю" Checked="RightAligmentRadioButton_Checked"/>
        </StackPanel>
    </StackPanel>
</Window>
