<Window x:Class="PractWork6.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:PractWork6"
        xmlns:ucl="clr-namespace:UserControlsLibrary;assembly=UserControlsLibrary"
        Title="Мониторы" Height="450" Width="800">
    <Window.Resources>
        <ControlTemplate TargetType="RadioButton" x:Key="RadioTemplate">
            <Border CornerRadius="25" BorderBrush="Black" 
                    BorderThickness="2"
                    Background="{TemplateBinding Background}"
                    Margin="3">
                <ContentControl HorizontalAlignment="Center" 
                                VerticalAlignment="Center"
                                Margin="5"
                                Content="{TemplateBinding Content}"/>
            </Border>
            <ControlTemplate.Triggers>
                <Trigger Property="IsChecked" Value="true">
                    <Setter Property="Background" Value="Aquamarine"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="false">
                    <Setter Property="Foreground" Value="Gray"/>
                    <Setter Property="Background" Value="LightGray"/>
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>
    </Window.Resources>
    <DockPanel>
        <WrapPanel Background="LightSeaGreen" Orientation="Vertical">
            <RadioButton Template="{StaticResource RadioTemplate}" Content="Мониторы" IsChecked="True" Checked="RadioButton_Checked"/>
            <RadioButton Template="{StaticResource RadioTemplate}" Content="Телефоны" Checked="RadioButton_Checked"/>
            <RadioButton Template="{StaticResource RadioTemplate}" Content="Комплектующие" Checked="RadioButton_Checked"/>
            <RadioButton Template="{StaticResource RadioTemplate}" Content="Автотовары" IsEnabled="False" Checked="RadioButton_Checked"/>
            <RadioButton Template="{StaticResource RadioTemplate}" Content="Мебель" Checked="RadioButton_Checked"/>
            <ucl:Clocks/>
        </WrapPanel>
        <DockPanel Width="250" Margin="5">
            <DockPanel DockPanel.Dock="Top" Margin="5">
                <TextBlock Text="Цена: "/>
                <TextBox x:Name="PriceTextBox" TextChanged="PriceTextBox_TextChanged"/>
            </DockPanel>
            <ucl:SetQuantity x:Name="SetQuantity" MaxValue="5" ValueChanged="SetQuantity_ValueChanged" DockPanel.Dock="Top"/>
            <TextBlock x:Name="TotalPriceTextBlock" Text="0 руб." HorizontalAlignment="Center"/>
        </DockPanel>
        <WrapPanel/>
    </DockPanel>
</Window>
