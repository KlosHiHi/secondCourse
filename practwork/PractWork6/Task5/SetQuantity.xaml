<UserControl x:Class="UserControlsLibrary.SetQuantity"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UserControlsLibrary"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="350">
    <DockPanel>
        <Button Content="+" x:Name="PlusButton" DockPanel.Dock="Right" Click="PlusButton_Click" Width="15"/>
        <Button Content="-" x:Name="MinusButton" DockPanel.Dock="Left" Click="MinusButton_Click" Width="15" IsEnabled="False"/>
        <TextBox x:Name="QuantityTextBox" Text="{Binding Value}"/>
    </DockPanel>
</UserControl>
