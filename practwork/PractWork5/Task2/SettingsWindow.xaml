<Window x:Class="Task2.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task2"
        mc:Ignorable="d"
        Title="Настройки" Height="450" Width="500" MinHeight="450" MinWidth="500"
        Loaded="Window_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="7*"/>
        </Grid.ColumnDefinitions>

        <Label Content="_Логин" Target="{Binding ElementName=LoginTextBox}"/>
        <TextBox x:Name="LoginTextBox" Grid.Column="1"/>

        <Label Content="_Пароль" Target="{Binding ElementName=PasswordTextBox}" Grid.Row="1"/>
        <TextBox x:Name="PasswordTextBox" Grid.Column="1" Grid.Row="1"/>

        <Label Content="_E-mail" Target="{Binding ElementName=EmailTextBox}" Grid.Row="2"/>
        <TextBox x:Name="EmailTextBox" Grid.Column="1" Grid.Row="2"/>

        <Button x:Name="SaveButton" Content="Сохранить" Grid.ColumnSpan="2" Grid.Row="3" Click="SaveButton_Click"/>
    </Grid>
</Window>
