<Window x:Class="PractWork4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PractWork4"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" FontSize="15" Background="DarkOliveGreen">
    <DockPanel>
        <DockPanel DockPanel.Dock="Top">
            <TextBox x:Name="SaleTextBox" DockPanel.Dock="Right" Margin="5" Width="50" Text="{Binding SelectGame.Sale, UpdateSourceTrigger=PropertyChanged}"/>
            <TextBox x:Name="PriceTextBox" DockPanel.Dock="Right" Margin="5" Width="50" Text="{Binding SelectGame.Price, UpdateSourceTrigger=PropertyChanged}"/>
            <TextBox x:Name="IDTextBox" DockPanel.Dock="Left" Margin="5" Width="25" Text="{Binding SelectGame.IdGame, UpdateSourceTrigger=PropertyChanged}"/>
            <ComboBox x:Name="ComboBox" DockPanel.Dock="Right" Margin="5" Width="150"/>
            <TextBox x:Name="DescriptionTextBox" DockPanel.Dock="Right" Margin="5" Width="300" Text="{Binding SelectGame.Description, UpdateSourceTrigger=PropertyChanged}"/>
            <TextBox x:Name="NameTextBox" Margin="5" Text="{Binding SelectGame.Name, UpdateSourceTrigger=PropertyChanged}"/>
        </DockPanel>

        <DataGrid x:Name="GameDataGrid" AutoGenerateColumns="False" IsReadOnly="True" SelectedCellsChanged="GameDataGrid_SelectedCellsChanged"
                  CanUserResizeColumns="False" CanUserResizeRows="False" SelectionMode="Single">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding IdGame}" Width="Auto"/>
                <DataGridTextColumn Header="Название" Binding="{Binding Name}" Width="100"/>
                <DataGridTextColumn Header="Описание" Binding="{Binding Description}" Width="*"/>
                <DataGridTextColumn Header="Категория" Binding="{Binding Category}" Width="*"/>
                <DataGridTextColumn Header="Цена" Binding="{Binding Price}" Width="60"/>
                <DataGridTextColumn Header="Скидка" Binding="{Binding Sale}" Width="60"/>
            </DataGrid.Columns>

        </DataGrid>
    </DockPanel>
</Window>
